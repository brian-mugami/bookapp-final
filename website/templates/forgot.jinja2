{% extends 'base.html' %}
{% block content%}
    <h3 align="center"> Reset Password </h3>
    <br/><br/>
    <div class="container-fluid">
        <form method= "POST">
        {{ form.hidden_tag() }}
        {{ form.Email.label (class="form-label", id="label")}}
        {{ form.Email(class="form-control") }}
        {{ form.Password.label (class="form-label", id="label")}}
        {{ form.Password(class="form-control") }}
        {{ form.Password2.label (class="form-label", id="label")}}
        {{ form.Password2(class="form-control") }}
        </br>
        {{ form.Submit(class="btn btn-dark mb-3") }}
    </div>
{% endblock %}